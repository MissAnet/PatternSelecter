<UserControl x:Class="PatternSelection.pageList.UserControl6"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PatternSelection.pageList"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border CornerRadius="20" Background="#165650" x:Name="border1" Margin="0,5,10,5">
        <Grid Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" >
                <TextBlock Text="{Binding textTask}" 
                                       FontSize="20"
                                       FontFamily="Comic Sans MS" 
                                       FontWeight="UltraBold" 
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="30,0" 
                                       Foreground="White"
                                       x:Name="daw" 
                                       TextWrapping="Wrap"/>
            </Grid>
            <Grid Grid.Row="1" >
                <TextBlock Text="{Binding patternName}" 
                                       FontSize="15" 
                                       FontFamily="Comic Sans MS" 
                                       HorizontalAlignment="Left"
                                       FontWeight="Thin"
                                       Margin="20,0" 
                                       Foreground="white"
                                       TextWrapping="Wrap"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
