<UserControl x:Class="PatternSelection.pageList.UserControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PatternSelection.pageList"
              d:DesignWidth="800"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="FontWeight" Value="Thin" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Margin" Value="20,0" />
            <Setter Property="Foreground" Value="white" />
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="Transparent" HorizontalAlignment="Left">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MaxWidth="160"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Название" x:Name="namePattern_TB" Grid.Row="0"/>
        <TextBlock Text="{Binding namePattern}" 
                                   FontSize="30"
                                   Grid.Row="0"
                                   Grid.Column="1"/>

        <TextBlock Text="Описание" Grid.Row="1"/>
        <TextBlock Text="{Binding description}"
                                   Grid.Row="1"
                                   Grid.Column="1"/>

        <TextBlock Text="Классификация" Grid.Row="2"/>
                        <TextBlock Text="{Binding typeName}"
                                   Grid.Row="2" Grid.Column="1"/>

        <TextBlock Text="Классификация" Grid.Row="3"/>
        <TextBlock Text="{Binding relTypeName}"
                                   Grid.Row="3" Grid.Column="1"/>

        <TextBlock Text="Диаграмма" Grid.Row="4"/>
        <Image Source="{Binding imageSource}" Grid.Row="4" Grid.Column="2" Stretch="UniformToFill" Margin="20"/>

        <TextBlock Text="Плюсы" Grid.Row="5"/>
        <TextBlock Text="{Binding problem}" Grid.Column="1" Grid.Row="5"/>
        <TextBlock Text="Недостатки" Grid.Row="6"/>
        <TextBlock Text="{Binding problem}" Grid.Column="1" Grid.Row="6"/>
        
        <TextBlock Text="Проблема" Grid.Row="7"/>
        <TextBlock Text="{Binding problem}" Grid.Column="1" Grid.Row="7"/>
        <TextBlock Text="Решение" Grid.Row="8"/>
        <TextBlock Text="{Binding decision}" Grid.Row="8" Grid.Column="1"/>
    </Grid>
                
</UserControl>
