<Window x:Name="window" x:Class="PatternSelection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PatternSelection"
        mc:Ignorable="d"
        Title="Pattern Selection" MinHeight="450" MinWidth="1000" WindowStyle="None" Icon="Image/mainIcon.png">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="FontWeight" Value="Thin" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Foreground" Value="white" />
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>
    <Grid Background="#04203d">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Background="#04203d" Grid.Row="0" Grid.ColumnSpan="2">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                <Grid Grid.Column="1"  MouseDown="window_MouseDown" Background="#04203d">
                    <TextBlock Text="Pattern selection" VerticalAlignment="Center" Margin="10,0" />
                </Grid>

                <Image Source="Image/mainIcon.png" MouseDown="window_MouseDown"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Image Stretch="Fill" Width="35" Height="35" Margin="5" MouseDown="MinimizeButton_MouseDown">
                            <Image.Style>
                                <Style>
                                    <Setter Property="Image.Source" Value="Image\rollup2.png" />
                                    <Style.Triggers>
                                        <Trigger  Property="Image.IsMouseOver" Value="True">
                                            <Setter Property="Image.Source" Value="Image\rollup3.png" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>

                        <Image Stretch="Fill" Width="35" Height="35" Margin="5" MouseDown="MaximizeButton_MouseDown">
                            <Image.Style>
                                <Style>
                                    <Setter Property="Image.Source" Value="Image\expand2.png"/>
                                    <Style.Triggers>
                                        <Trigger  Property="Image.IsMouseOver" Value="True">
                                            <Setter Property="Image.Source" Value="Image\expand3.png" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>

                        <Image Stretch="Fill" Width="35" Height="35" Margin="5" MouseDown="CloseButton_MouseDown">
                            <Image.Style>
                                <Style>
                                    <Setter Property="Image.Source" Value="Image\close2.png" />
                                    <Style.Triggers>
                                        <Trigger  Property="Image.IsMouseOver" Value="True">
                                        <Setter Property="Image.Source" Value="Image\close3.png"/>
                                    </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                    </StackPanel>
                </Grid>
            </Grid>
            
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="230"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ListView Grid.Column="0" Grid.Row="1"
                      Margin="5" 
                      Background="#04203d" BorderBrush="#04203d" 
                      x:Name="listView_sel" 
                      SelectionChanged="ListView_SelectionChanged">
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListViewItem}">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="FontSize" Value="25"></Setter>
                        <Setter Property="FontWeight" Value="UltraBold"></Setter>
                        <Setter Property="Foreground" Value="#808080"></Setter>
                        <Setter Property="FontFamily" Value="Comic Sans MS"></Setter>
                        <Setter Property="Margin" Value="0,10"></Setter>
                        <Style.Triggers>
                            <Trigger  Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="white"/>
                                <Setter Property="FontWeight" Value="UltraBlack"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="UltraBlack"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListViewItem Content="Паттерны" x:Name="patternPageItem"/>
                <ListViewItem Content="Подбор паттерна" x:Name="searchPatternPageItem"/>
                <ListViewItem Content="Задачник" x:Name="listTasksPageItem"/>
                <ListViewItem Content="О программе" x:Name="infoPageItem"/>
            </ListView>
            <Border Grid.Column="1" 
                    Grid.Row="1" 
                    Background="#0a2e41" 
                    CornerRadius="20" 
                    Margin="5">
                <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden"/>
            </Border>
        </Grid>
    </Grid>
</Window>
